# DragNet Portal Configuration
# Copy this file to .env and fill in your values

# Application Environment
APP_ENV=production
APP_DEBUG=false

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=dragnet
DB_USER=your_database_user
DB_PASSWORD=your_database_password

# Session Configuration
SESSION_SECURE=true

# SSO - Microsoft Entra ID (Azure AD)
SSO_ENTRA_ENABLED=false
SSO_ENTRA_CLIENT_ID=your_entra_client_id
SSO_ENTRA_CLIENT_SECRET=your_entra_client_secret
SSO_ENTRA_TENANT_ID=your_entra_tenant_id
SSO_ENTRA_REDIRECT_URI=https://yourdomain.com/auth/callback

# SSO - Google Workspace
SSO_GOOGLE_ENABLED=false
SSO_GOOGLE_CLIENT_ID=your_google_client_id
SSO_GOOGLE_CLIENT_SECRET=your_google_client_secret
SSO_GOOGLE_REDIRECT_URI=https://yourdomain.com/auth/callback

# Push Notifications (Web Push API)
# Generate VAPID keys using: npx web-push generate-vapid-keys
PUSH_VAPID_PUBLIC_KEY=your_vapid_public_key
PUSH_VAPID_PRIVATE_KEY=your_vapid_private_key
PUSH_VAPID_SUBJECT=mailto:admin@yourdomain.com
